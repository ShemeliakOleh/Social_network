<Page x:Class="Social_network.Views.ContentStream"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Social_network.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContentStream"
      Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer Background="White" VerticalScrollBarVisibility="Hidden" >
            <StackPanel x:Name="mainStackContent">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" Text="New post" FontSize="13">

                    </TextBlock>

                    <TextBox x:Name="newPostTextBox" MinHeight="30" TextWrapping="Wrap">

                    </TextBox>
                    <Button HorizontalAlignment="Right" Foreground="Purple" Background="White" BorderBrush="White" Click="BCreatePost_Click">Create
                    </Button>
                </StackPanel>
               
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
